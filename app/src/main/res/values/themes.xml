<resources>
    <!-- Base application theme. -->
    <style name="Theme.FruitHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/orange</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <style name="ImageViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- style for TextView -->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/paua</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="fontFamily">@font/ttnorms_medium</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:singleLine">true</item>
        <item name="fontFamily">@font/ttnorms_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/btn_edittext_normal</item>
    </style>

    <!-- style for ButtonStyle -->
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:background">@drawable/btn_design_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ttnorms_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ttnorms_regular</item>
    </style>

    <style name="toggleButton" >
        <item name="android:textOn" />
        <item name="android:textOff" />
    </style>
</resources>